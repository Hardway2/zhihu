.swiper {
  width: 100%;
  height: 180px;
}

.swiper-item {
  position: relative;
}

.swiper-image {
  width: 100%;
  height: 100%;
}

.swiper-title {
  color: #FFF;
  position: absolute;
  width: 100%;
  padding-left: 16px;
  padding-right: 16px; 
  bottom: 30px;
  font-size: 16px;
  left: 0;
}

.news-container {
  display: flex;
  flex-direction: column;
  width: 100%;
}

.news-item{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 20rpx 20rpx;
  border-bottom: 2rpx solid #eee;
}

.news-title {
  display: block;
  font-size: 14px;
  width: 80%;
}

.news-image{
  width: 120rpx;
  height: 100rpx;
  margin-right: 10rpx;
  margin-left: 20rpx;
}

.news-date{
  color: #fff;
  background-color: #00a2ea;
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 14px;
  text-align: center;
  vertical-align: center;
}